{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "sourceMap": false,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "outDir": "./dist/",
    "declaration": true
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "lib/**/*+(index).ts",
    "examples"
  ],
  "typedocOptions": {
    "out": "docs",
    "exclude": "**/*+(index).ts",
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "hideGenerator": true,
    "theme": "minimal",
    "target": "ES6"
  }
}
